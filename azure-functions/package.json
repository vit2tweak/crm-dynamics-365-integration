{
  "name": "crm-dynamics365-azure-functions",
  "version": "1.0.0",
  "description": "Azure Functions for CRM Dynamics 365 Integration - handles data synchronization, processing, and webhooks",
  "main": "index.js",
  "scripts": {
    "start": "func start",
    "build": "npm run clean && npm run compile",
    "clean": "rimraf dist",
    "compile": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "deploy": "func azure functionapp publish crm-dynamics365-functions",
    "logs": "func azure functionapp logstream crm-dynamics365-functions"
  },
  "dependencies": {
    "@azure/cosmos": "^4.0.0",
    "@azure/msal-node": "^2.6.6",
    "@azure/functions": "^4.0.0",
    "axios": "^1.6.0",
    "node-fetch": "^3.3.2",
    "uuid": "^9.0.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "xml2js": "^0.6.2",
    "jsonwebtoken": "^9.0.2",
    "crypto": "^1.0.1",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.7",
    "@types/lodash": "^4.14.202",
    "@types/xml2js": "^0.4.14",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/validator": "^13.11.7",
    "typescript": "^5.0.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "eslint": "^8.54.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/crm-dynamics365-integration.git"
  },
  "keywords": [
    "azure-functions",
    "dynamics365",
    "nav2017",
    "cosmosdb",
    "crm",
    "integration",
    "sync",
    "webhook"
  ],
  "author": "Your Organization",
  "license": "MIT",
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.{js,ts}",
      "!**/node_modules/**",
      "!**/dist/**"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/explicit-function-return-type": "warn"
    }
  }
}