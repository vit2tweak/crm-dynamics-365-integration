# Azure Configuration
REACT_APP_AZURE_CLIENT_ID=your-azure-client-id
REACT_APP_AZURE_TENANT_ID=your-azure-tenant-id
REACT_APP_AZURE_REDIRECT_URI=http://localhost:3000
REACT_APP_AZURE_FUNCTION_URL=https://your-function-app.azurewebsites.net
REACT_APP_AZURE_SUBSCRIPTION_ID=your-subscription-id
REACT_APP_AZURE_RESOURCE_GROUP=your-resource-group

# Microsoft Dynamics 365 Configuration
REACT_APP_DYNAMICS_URL=https://yourorg.crm.dynamics.com
REACT_APP_DYNAMICS_API_VERSION=9.2
REACT_APP_DYNAMICS_CLIENT_ID=your-dynamics-client-id
REACT_APP_DYNAMICS_CLIENT_SECRET=your-dynamics-client-secret
REACT_APP_DYNAMICS_SCOPE=https://yourorg.crm.dynamics.com/.default

# NAV 2017 ERP Configuration
REACT_APP_NAV_BASE_URL=http://your-nav-server:7048/DynamicsNAV100/ODataV4
REACT_APP_NAV_COMPANY=YourCompanyName
REACT_APP_NAV_USERNAME=nav-service-user
REACT_APP_NAV_PASSWORD=nav-service-password
REACT_APP_NAV_DOMAIN=your-domain
REACT_APP_NAV_TIMEOUT=30000

# Azure Cosmos DB Configuration
REACT_APP_COSMOSDB_ENDPOINT=https://your-cosmosdb.documents.azure.com:443/
REACT_APP_COSMOSDB_KEY=your-cosmosdb-primary-key
REACT_APP_COSMOSDB_DATABASE=ProductCatalog
REACT_APP_COSMOSDB_CONTAINER=Products

# Azure Key Vault Configuration
REACT_APP_KEYVAULT_URL=https://your-keyvault.vault.azure.net/
REACT_APP_KEYVAULT_CLIENT_ID=your-keyvault-client-id
REACT_APP_KEYVAULT_CLIENT_SECRET=your-keyvault-client-secret

# Azure Service Bus Configuration
REACT_APP_SERVICEBUS_CONNECTION_STRING=Endpoint=sb://your-servicebus.servicebus.windows.net/;SharedAccessKeyName=RootManageSharedAccessKey;SharedAccessKey=your-key
REACT_APP_SERVICEBUS_QUEUE_NAME=crm-sync-queue
REACT_APP_SERVICEBUS_TOPIC_NAME=crm-events

# Application Configuration
REACT_APP_API_BASE_URL=https://your-api.azurewebsites.net/api
REACT_APP_ENVIRONMENT=development
REACT_APP_LOG_LEVEL=debug
REACT_APP_ENABLE_MOCK_DATA=false
REACT_APP_CACHE_TIMEOUT=300000
REACT_APP_SYNC_INTERVAL=60000

# Authentication Configuration
REACT_APP_AUTH_PROVIDER=azure-ad-b2c
REACT_APP_B2C_TENANT_NAME=your-b2c-tenant
REACT_APP_B2C_POLICY_SIGNIN=B2C_1_signin
REACT_APP_B2C_POLICY_SIGNUP=B2C_1_signup
REACT_APP_B2C_POLICY_RESET=B2C_1_reset
REACT_APP_B2C_SCOPE=openid profile email

# Feature Flags
REACT_APP_FEATURE_CUSTOMER_PORTAL=true
REACT_APP_FEATURE_ADVANCED_ANALYTICS=true
REACT_APP_FEATURE_WORKFLOW_BUILDER=true
REACT_APP_FEATURE_REAL_TIME_SYNC=true
REACT_APP_FEATURE_MOBILE_RESPONSIVE=true

# Performance Configuration
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true
REACT_APP_BUNDLE_ANALYZER=false
REACT_APP_LAZY_LOADING=true
REACT_APP_VIRTUAL_SCROLLING=true

# Monitoring and Logging
REACT_APP_APPINSIGHTS_INSTRUMENTATION_KEY=your-appinsights-key
REACT_APP_APPINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-key;IngestionEndpoint=https://your-region.in.applicationinsights.azure.com/
REACT_APP_ENABLE_TELEMETRY=true
REACT_APP_LOG_TO_CONSOLE=true
REACT_APP_LOG_TO_APPINSIGHTS=true

# Integration Settings
REACT_APP_SYNC_BATCH_SIZE=100
REACT_APP_MAX_RETRY_ATTEMPTS=3
REACT_APP_RETRY_DELAY=5000
REACT_APP_CONNECTION_TIMEOUT=30000
REACT_APP_REQUEST_TIMEOUT=60000

# Security Settings
REACT_APP_ENABLE_HTTPS_ONLY=true
REACT_APP_ENABLE_CORS=true
REACT_APP_ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com
REACT_APP_SESSION_TIMEOUT=3600000
REACT_APP_TOKEN_REFRESH_THRESHOLD=300000

# Development Settings (only for development environment)
REACT_APP_MOCK_DYNAMICS_API=false
REACT_APP_MOCK_NAV_API=false
REACT_APP_MOCK_COSMOS_API=false
REACT_APP_ENABLE_DEBUG_TOOLS=true
REACT_APP_SHOW_REDUX_DEVTOOLS=true

# Database Configuration (for local development)
REACT_APP_LOCAL_DB_CONNECTION=Server=localhost;Database=CRMIntegration;Trusted_Connection=true;
REACT_APP_LOCAL_REDIS_CONNECTION=localhost:6379

# Email Configuration
REACT_APP_SMTP_SERVER=smtp.office365.com
REACT_APP_SMTP_PORT=587
REACT_APP_SMTP_USERNAME=your-email@company.com
REACT_APP_SMTP_PASSWORD=your-email-password
REACT_APP_FROM_EMAIL=noreply@company.com

# File Storage Configuration
REACT_APP_BLOB_STORAGE_ACCOUNT=yourstorageaccount
REACT_APP_BLOB_STORAGE_KEY=your-storage-key
REACT_APP_BLOB_CONTAINER_NAME=crm-files
REACT_APP_MAX_FILE_SIZE=10485760

# Webhook Configuration
REACT_APP_WEBHOOK_SECRET=your-webhook-secret
REACT_APP_WEBHOOK_TIMEOUT=30000
REACT_APP_WEBHOOK_RETRY_COUNT=3

# Custom Business Rules
REACT_APP_DEFAULT_CURRENCY=USD
REACT_APP_DEFAULT_TIMEZONE=UTC
REACT_APP_DEFAULT_LANGUAGE=en-US
REACT_APP_BUSINESS_HOURS_START=09:00
REACT_APP_BUSINESS_HOURS_END=17:00
REACT_APP_WORKING_DAYS=1,2,3,4,5